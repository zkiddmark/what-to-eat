@if (!string.IsNullOrEmpty(DishDto?.ImageId))
{
    <ImageFromDbComponent ImageId="@DishDto.ImageId" />
}
else if (!string.IsNullOrEmpty(DishDto?.ImgUrl))
{
    <img src="@DishDto?.ImgUrl" class="card-img-top" alt="..." style="max-height: 500px; object-fit: cover">
}
else
{
    <img src="@GetRandomImg()" class="card-img-top opacity-25"
    alt="This a random placeholder picture because you were to lazy to add one that reflects the dish!"
    style="max-height: 500px; object-fit: cover">
}

@code
{
    [Parameter]
    public DishDto? DishDto { get; set; }

    private string GetRandomImg()
    {
        var rnd = new Random();
        return $"/img/placeholders/placeholder_{rnd.Next(1, 11)}.jpeg";
    }
}