@if (DishDto?.Ingredients?.Any() ?? false)
{
    <div class="col-xs-12 col-sm-10 my-4">
    <button class="btn btn-secondary btn-sm w-100" type="button" data-bs-toggle="collapse"
        data-bs-target="#collapseIngredients" aria-expanded="false" aria-controls="collapseIngredients">
        Show ingredients
    </button>
    <div class="collapse" id="collapseIngredients">
        <div class="card card-body">
            <ul class="list-group">
                @foreach (var ingredient in DishDto!.Ingredients)
                    {
                        <li class="list-group-item">@ingredient</li>
                    }
                </ul>
            </div>
        </div>
    </div>
}

@code
{
    [Parameter]
    public DishDto? DishDto { get; set; }
}