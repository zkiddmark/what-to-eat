@inject IFirebaseService FirebaseService;
@inject FirebaseAuthStateProvider FirebaseAuthStateProvider;
@inject NavigationManager Navigation;

@page "/"
<div class="container">
    <div class="container-fluid">
        <div class="d-flex justify-content-center align-items-center">
            <h1 class="text-primary text-muted text-center me-3">What to eat</h1>
            <button class="btn btn-outline-secondary ms-3 h-50" @onclick="async () => await SignOut()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                    <use href="/svg/box-arrow-right.svg#box-arrow-right" fill="#ffd700"></use>
                </svg>
            </button>
        </div>
        @foreach (var day in Enum.GetValues<Days>())
        {
            <div class="row justify-content-center">
                <div class="col-sm-12 my-3" style="max-width: 520px;">
                    <DayCard Day=day />
                </div>
            </div>
        }
    </div>
</div>

@code
{
    private async Task SignOut()
    {
        await FirebaseService.SignOut();
        Navigation.NavigateTo("/login");
    }
}
